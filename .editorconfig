# http://editorconfig.org
# This file is the primary source of truth for all mechanical code formatting.
# It MUST reside at the root of the repository to apply to all subdirectories.

root = true

[*]
# Core Rules for ALL Files
end_of_line = lf              # Use Linux-style line endings for consistency across Git/Docker
insert_final_newline = true   # Ensures every file ends with a blank line
charset = utf-8               # Standard character encoding
trim_trailing_whitespace = true # Ensures NO trailing whitespace by default

[*.{py,js,ts,tsx,css,scss,md,json,yml,yaml,toml,ini,sh}]
# Indentation Rules for Code and Config Files
indent_style = space
indent_size = 2

# Python Files: Overrides for PEP 8 Standard
[*.py]
indent_size = 4               # Python's official standard (PEP 8) is 4 spaces
trim_trailing_whitespace = true

# Shell Scripts (e.g., scripts/dev_reset.sh)
[*.sh]
indent_style = tab           # Shell scripts often prefer tabs for indentation

# Markdown Files: Specific Rules
[*.md]
trim_trailing_whitespace = false # Allows intentional trailing spaces for line breaks

# JSON/YAML/TOML/INI: Specific Rules
[*.{json,yml,yaml,toml,ini}]
indent_size = 2               # Standard for configuration files