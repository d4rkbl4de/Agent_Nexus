# --- PROJECT CONFIG ---
APP_ENV=development
DEBUG=true
PROJECT_NAME=Agent_Nexus
# Generate a secure key for production (e.g., openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# --- RELATIONAL MEMORY (POSTGRES) ---
POSTGRES_USER=nexus_admin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=nexus_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- ASYNC & CACHE (REDIS) ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- VECTOR MEMORY (QDRANT) ---
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# --- LLM ORCHESTRATION (OPENROUTER) ---
OPENROUTER_API_KEY=your_openrouter_api_key_here
PRIMARY_MODEL=google/gemini-pro-1.5
REASONING_MODEL=anthropic/claude-3.5-sonnet
FAST_MODEL=meta-llama/llama-3.1-8b-instruct

# --- LOBE ENDPOINTS (INTERNAL) ---
INSIGHTMATE_URL=http://backend:8000/insightmate
STUDYFLOW_URL=http://backend:8000/studyflow
CHATBUDDY_URL=http://backend:8000/chatbuddy
AUTOAGENT_HUB_URL=http://backend:8000/hub

# --- CORS & SECURITY ---
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
INTERNAL_TOKEN=your_internal_secure_token